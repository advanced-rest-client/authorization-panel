{
  "name": "@advanced-rest-client/authorization-panel",
  "description": "The authorization panel used in the request panel",
  "version": "3.0.0-preview.2",
  "license": "Apache-2.0",
  "main": "authorization-panel.js",
  "keywords": [
    "authorization",
    "oauth",
    "ntlm",
    "oauth1",
    "oauth2",
    "basic",
    "disgest",
    "api"
  ],
  "authors": [
    "Pawel Psztyc"
  ],
  "contributors": [
    "The Advanced REST client authors <arc@mulesoft.com>"
  ],
  "repository": {
    "type": "git",
    "url": "git://github.com/advanced-rest-client/authorization-panel.git"
  },
  "bugs": {
    "url": "https://github.com/advanced-rest-client/authorization-panel/issues",
    "email": "arc@mulesoft.com"
  },
  "dependencies": {
    "@advanced-rest-client/auth-methods": "^4.0.2",
    "@advanced-rest-client/events-target-mixin": "^3.0.0",
    "@anypoint-web-components/anypoint-dropdown-menu": "^0.1.9",
    "@anypoint-web-components/anypoint-item": "^1.0.2",
    "@anypoint-web-components/anypoint-listbox": "^1.0.2",
    "@api-components/amf-helper-mixin": "^3.0.2",
    "@polymer/iron-meta": "^3.0.0",
    "cryptojslib": "^3.1.2",
    "jsrsasign": "^8.0.12",
    "lit-element": "^2.0.1"
  },
  "devDependencies": {
    "@advanced-rest-client/arc-demo-helper": "^1.0.14",
    "@advanced-rest-client/eslint-config": "^1.0.6",
    "@advanced-rest-client/oauth-authorization": "^3.0.0",
    "@advanced-rest-client/prettier-config": "^0.1.0",
    "@advanced-rest-client/testing-karma-sl": "^1.0.3",
    "@api-components/api-model-generator": "^0.1.12",
    "@api-components/api-navigation": "^3.0.3",
    "@commitlint/cli": "^8.1.0",
    "@commitlint/config-conventional": "^7.0.0",
    "@open-wc/testing": "^2.2.8",
    "@open-wc/testing-karma": "^3.1.24",
    "@polymer/gen-typescript-declarations": "^1.6.2",
    "@polymer/iron-test-helpers": "^3.0.0",
    "deepmerge": "^4.0.0",
    "es-dev-server": "^1.14.2",
    "husky": "^1.0.0",
    "karma": "^4.2.0",
    "lint-staged": "^9.2.1",
    "sinon": "^7.4.1",
    "web-animations-js": "^2.3.2"
  },
  "scripts": {
    "test": "karma start --coverage",
    "update-types": "gen-typescript-declarations --deleteExisting --outDir .",
    "start": "es-dev-server --app-index demo/index.html --node-resolve --open --watch --port 8000",
    "start:compatibility": "es-dev-server --app-index demo/index.html --compatibility all --node-resolve --open --watch",
    "lint:eslint": "eslint --ext .js,.html .",
    "format:eslint": "eslint --ext .js,.html . --fix",
    "lint:prettier": "prettier \"**/*.js\" --list-different || (echo '↑↑ these files are not prettier formatted ↑↑' && exit 1)",
    "format:prettier": "prettier \"**/*.js\" --write",
    "lint": "npm run lint:eslint && npm run lint:prettier",
    "format": "npm run format:eslint && npm run format:prettier",
    "test:watch": "karma start --auto-watch=true --single-run=false",
    "test:legacy": "karma start --legacy --coverage",
    "test:legacy:watch": "karma start --legacy --auto-watch=true --single-run=false",
    "test:sl": "karma start karma.sl.config.js --legacy --capture-timeout 240000",
    "generate-model": "node demo/model.js"
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "git add"
    ]
  }
}
